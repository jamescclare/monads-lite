    "bugs": {
        "url": "https://github.com/jamescclare/monads-lite/issues"
    },
    "homepage": "https://github.com/jamescclare/monads-lite#readme",
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.2",
        "@types/jest": "^29.5.2",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "eslint": "^8.42.0",
        "husky": "^8.0.0",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.0",
        "typescript": "^5.1.3"
